---
import BaseLayout from '../layouts/BaseLayout.astro'
import { site } from '../data/site'

const blueprints = [
  {
    title: 'OPC UA Data Collection',
    description: 'Collect data from OPC UA servers and store in a time-series database.',
    category: 'Industrial',
  },
  {
    title: 'MQTT to Database',
    description: 'Subscribe to MQTT topics and persist data to PostgreSQL or InfluxDB.',
    category: 'Data Integration',
  },
  {
    title: 'Real-Time Dashboard',
    description: 'Create a real-time dashboard for monitoring industrial processes.',
    category: 'Visualization',
  },
  {
    title: 'REST API Gateway',
    description: 'Build a REST API to expose your industrial data to other systems.',
    category: 'API',
  },
  {
    title: 'Alert & Notification',
    description: 'Set up alerts based on thresholds and send notifications via email or Slack.',
    category: 'Monitoring',
  },
  {
    title: 'Edge Data Aggregation',
    description: 'Aggregate data at the edge before sending to the cloud.',
    category: 'Edge',
  },
]
---

<BaseLayout
  title="Blueprint Library"
  description="Get started quickly with pre-built Node-RED blueprints for common industrial automation use cases."
>
  <div class="w-full py-16 px-6">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-3xl md:text-4xl font-medium text-gray-800 mb-4">Blueprint Library</h1>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Jumpstart your projects with pre-built templates. Blueprints provide tested,
          production-ready starting points for common use cases.
        </p>
      </div>

      <!-- Blueprints Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {blueprints.map((blueprint) => (
          <div class="p-6 bg-white border border-gray-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition-all">
            <span class="inline-block px-3 py-1 bg-indigo-50 text-indigo-600 text-sm rounded-full mb-4">
              {blueprint.category}
            </span>
            <h3 class="text-lg font-medium text-gray-800 mb-2">{blueprint.title}</h3>
            <p class="text-gray-600 text-sm">{blueprint.description}</p>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-lg p-8">
        <h2 class="text-2xl font-medium text-gray-800 mb-4">Access the Full Library</h2>
        <p class="text-gray-600 mb-6">
          Sign up for FlowFuse to access our complete collection of blueprints
          and start building faster.
        </p>
        <a
          href={site.onboardingURL}
          class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Get Started Free
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
