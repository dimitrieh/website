---
import BaseLayout from '../layouts/BaseLayout.astro'
import { site } from '../data/site'

const solutions = [
  {
    href: '/solutions/it-ot-middleware/',
    icon: 'i-heroicons-cog-6-tooth',
    title: 'IT/OT Middleware',
    description:
      'Connect disparate systems and industrial protocols with a unified platform. Accelerate development and enable seamless collaboration between IT and OT teams.',
  },
  {
    href: '/solutions/scada/',
    icon: 'i-heroicons-adjustments-horizontal',
    title: 'SCADA',
    description:
      'Modernize your SCADA systems with a modular and flexible platform. Build custom interfaces and control logic in a fraction of the time.',
  },
  {
    href: '/solutions/mes/',
    icon: 'i-heroicons-chart-bar',
    title: 'MES',
    description:
      'Implement custom Manufacturing Execution Systems with greater speed. Rapidly develop and deploy specific workflows connecting plans to plant floors.',
  },
]

const metrics = [
  { number: '10x', text: 'Faster development with our AI Copilot' },
  { number: '50%', text: 'Reduction in scrap rate with real-time monitoring' },
  { number: '9x', text: 'Faster Prototyping, from days to hours for back-end services' },
]
---

<BaseLayout>
  <!-- Hero Section -->
  <div class="w-full px-6 bg-gradient-to-b from-indigo-50 to-white">
    <div class="max-w-5xl mx-auto py-16 sm:py-24">
      <h1
        class="text-3xl sm:text-4xl md:text-5xl font-medium text-center text-indigo-700 mb-6 max-w-3xl mx-auto"
      >
        {site.messaging.tagLine}
      </h1>
      <p class="text-center text-gray-600 md:text-xl max-w-4xl mx-auto mt-6">
        {site.messaging.subtitle}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10">
        <a
          href={site.onboardingURL}
          class="inline-flex items-center px-6 py-3 text-base font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Start Free Trial
        </a>
        <a
          href="/contact-us"
          class="inline-flex items-center px-6 py-3 text-base font-medium text-indigo-600 border border-indigo-600 rounded-lg hover:bg-indigo-50 transition-colors"
        >
          Contact Us
        </a>
      </div>

      <!-- Video Section -->
      <div class="mt-16 text-center">
        <p class="text-gray-600 mb-8">
          Or get a quick look at FlowFuse in 90 seconds
        </p>
        <div class="aspect-video max-w-4xl mx-auto rounded-xl overflow-hidden border-4 border-indigo-200">
          <iframe
            src="https://www.youtube.com/embed/9i-EKcNksvk"
            title="FlowFuse Demo"
            class="w-full h-full"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Social Proof -->
  <div class="w-full px-6 py-12">
    <div class="max-w-5xl mx-auto">
      <p class="text-center text-gray-600 mb-8">
        Trusted by industrial leaders driving digital transformation worldwide
      </p>
      <!-- TODO: Add company logos -->
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-60">
        <div class="h-8 w-32 bg-gray-200 rounded"></div>
        <div class="h-8 w-32 bg-gray-200 rounded"></div>
        <div class="h-8 w-32 bg-gray-200 rounded"></div>
        <div class="h-8 w-32 bg-gray-200 rounded"></div>
        <div class="h-8 w-32 bg-gray-200 rounded"></div>
      </div>
    </div>
  </div>

  <!-- Metrics -->
  <div class="w-full px-6 py-12">
    <div class="max-w-5xl mx-auto">
      <div class="grid sm:grid-cols-3 gap-8">
        {
          metrics.map((metric) => (
            <div class="bg-gradient-to-br from-indigo-50 to-white rounded-lg p-6">
              <h3 class="text-4xl font-normal text-indigo-600">{metric.number}</h3>
              <p class="mt-2 text-gray-600">{metric.text}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Solutions Section -->
  <div class="w-full px-6 py-16 bg-gray-50">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl sm:text-3xl font-medium text-center mb-4">
        <span class="text-indigo-600">Unlock Powerful Solutions</span> for Your Industrial
        Operations
      </h2>
      <p class="text-center text-gray-600 max-w-3xl mx-auto mb-12">
        FlowFuse provides a comprehensive set of solutions designed to bridge the gap between IT and
        OT, streamline device management, and integrate data with unprecedented speed and intelligence.
      </p>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8">
        {
          solutions.map((solution) => (
            <a
              href={solution.href}
              class="group block bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              <div class="flex items-center gap-3 mb-4">
                <span class={`${solution.icon} text-2xl text-indigo-600`} />
                <h3 class="text-lg font-medium text-indigo-700 group-hover:text-indigo-800">
                  {solution.title}
                </h3>
              </div>
              <p class="text-gray-600 text-sm">{solution.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="w-full px-6 py-20 bg-indigo-600">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl sm:text-3xl font-medium text-white mb-6">
        Ready to Transform Your Industrial Operations?
      </h2>
      <p class="text-indigo-100 mb-8">
        Get started with FlowFuse today and accelerate your digital transformation journey.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href={site.onboardingURL}
          class="inline-flex items-center px-6 py-3 text-base font-medium text-indigo-600 bg-white rounded-lg hover:bg-indigo-50 transition-colors"
        >
          Start Free Trial
        </a>
        <a
          href="/contact-us"
          class="inline-flex items-center px-6 py-3 text-base font-medium text-white border border-white rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Talk to Sales
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
