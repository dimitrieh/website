---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { site } from '../../data/site'

const features = [
  {
    title: 'Simplified Hosting and Maintenance',
    icon: 'i-heroicons-cloud',
    description: 'Experience ease of use with FlowFuse Cloud, handling all your hosting needs. Forget the complexities of maintaining your development environment.',
  },
  {
    title: 'Centralised Instance Management',
    icon: 'i-heroicons-squares-2x2',
    description: 'FlowFuse enables seamless management of multiple instances from a single platform, streamlining your development and coordination efforts.',
  },
  {
    title: 'Scalable High Availability',
    icon: 'i-heroicons-arrow-trending-up',
    description: 'Node-RED applications can be run in High Availability mode to allow the applications to scale up to meet spikes in demand.',
  },
  {
    title: 'Data Sharing and Storage',
    icon: 'i-heroicons-circle-stack',
    description: 'FlowFuse adds the ability to share information between instances and persistent data. FlowFuse Project Nodes facilitate data and message exchange.',
  },
  {
    title: 'Remote Device Management',
    icon: 'i-heroicons-cpu-chip',
    description: 'Deploy and manage Node-RED instances out to edge devices. Deploy the same instance to hundreds or thousands of edge devices.',
  },
  {
    title: 'Software Delivery Pipelines',
    icon: 'i-heroicons-arrow-path',
    description: 'DevOps pipelines can be set up to stage Node-RED instances with different development stages such as test, development and production.',
  },
  {
    title: 'Version History',
    icon: 'i-heroicons-clock',
    description: 'Snapshots of Node-RED instances can be taken to create a version history. Previous snapshot versions can be rolled back at any time.',
  },
  {
    title: 'Team Collaboration',
    icon: 'i-heroicons-user-group',
    description: 'Different development team members are able to share and develop on the same Node-RED instance. Role-based access control (RBAC) for restrictions.',
  },
  {
    title: 'Built-in Security',
    icon: 'i-heroicons-shield-check',
    description: 'All Node-RED instances are accessed using TLS/SSL. Single Sign-on (SSO) and audit logs keep track of all changes.',
  },
  {
    title: 'Certified Nodes',
    icon: 'i-heroicons-check-badge',
    description: 'Curated collection of certified nodes, ensuring top-notch quality, security, and support for a robust ecosystem.',
  },
]

const capabilities = [
  { title: 'Connect', description: 'Integrate seamlessly with industry-standard protocols', icon: 'i-heroicons-arrows-right-left', href: '/solutions/edge-connectivity/' },
  { title: 'Collect & Transform', description: 'Gather and standardise data from various sources', icon: 'i-heroicons-funnel', href: '/solutions/data-integration/' },
  { title: 'Visualise', description: 'Turn data into actionable insights with dashboards', icon: 'i-heroicons-chart-bar', href: '/platform/dashboard/' },
  { title: 'Interact', description: 'Control systems directly from the dashboard', icon: 'i-heroicons-cursor-arrow-rays', href: '/platform/dashboard/' },
]
---

<BaseLayout
  title="FlowFuse Features"
  description="FlowFuse provides the features companies require to reliably deliver Node-RED applications to devices and cloud in a collaborative, secure manner."
>
  <!-- Hero -->
  <div class="w-full py-16 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl md:text-4xl font-medium text-gray-800 mb-4">
        FlowFuse Platform <span class="text-indigo-600">Features</span>
      </h1>
      <p class="text-xl text-indigo-400 mb-6">Low-Code Development Meets Industrial Strength</p>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
        Bridging the gaps between OT and IT, FlowFuse provides a comprehensive platform for all your industrial data connectivity needs, delivered with enterprise-grade control and security.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact-us/"
          class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Contact Us
        </a>
        <a
          href={site.onboardingURL}
          class="inline-flex items-center px-6 py-3 border border-indigo-600 text-indigo-600 font-medium rounded-lg hover:bg-indigo-50 transition-colors"
        >
          Start Free Trial
        </a>
      </div>
    </div>
  </div>

  <!-- Capabilities -->
  <div class="w-full bg-gray-50 py-16 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-medium text-center mb-12">
        <span class="text-indigo-600">Low-Code</span> Development
      </h2>
      <div class="grid sm:grid-cols-2 gap-6">
        {capabilities.map((cap) => (
          <a
            href={cap.href}
            class="bg-white p-6 rounded-lg border border-gray-200 hover:border-indigo-300 hover:shadow-md transition-all group"
          >
            <div class="flex items-center gap-3 mb-3">
              <span class={`${cap.icon} text-2xl text-indigo-600`} />
              <h3 class="text-lg font-medium text-gray-800 group-hover:text-indigo-600">{cap.title}</h3>
            </div>
            <p class="text-gray-600">{cap.description}</p>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Features Grid -->
  <div class="w-full py-16 px-6">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-medium mb-4">
          FlowFuse Operationalises <span class="text-indigo-600">Node-RED</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          In an enterprise environment, Node-RED deployments need to be more robust. FlowFuse bridges the gap, offering key features for enterprise-grade Node-RED solutions.
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {features.map((feature) => (
          <div class="p-6 border border-indigo-100 rounded-lg bg-white">
            <div class="flex items-center gap-3 mb-3">
              <span class={`${feature.icon} text-2xl text-indigo-600`} />
              <h3 class="font-medium text-gray-800">{feature.title}</h3>
            </div>
            <p class="text-gray-600 text-sm">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- CTA -->
  <div class="w-full py-16 px-6 bg-indigo-600">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-medium text-white mb-4">
        Ready to get started?
      </h2>
      <p class="text-indigo-100 mb-8">
        Experience the power of FlowFuse with a free trial. No credit card required.
      </p>
      <a
        href={site.onboardingURL}
        class="inline-flex items-center px-6 py-3 bg-white text-indigo-600 font-medium rounded-lg hover:bg-indigo-50 transition-colors"
      >
        Start Free Trial
      </a>
    </div>
  </div>
</BaseLayout>
