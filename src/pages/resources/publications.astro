---
import BaseLayout from '../../layouts/BaseLayout.astro'

const publications = [
  {
    title: 'UNS: Decoupling Data Producers and Consumers',
    type: 'Whitepaper',
    description: 'Learn how a Unified Namespace architecture enables flexible data integration in industrial settings.',
  },
  {
    title: 'Node-RED Best Practices Guide',
    type: 'eBook',
    description: 'A comprehensive guide to writing maintainable, performant Node-RED flows.',
  },
  {
    title: 'Industrial IoT with FlowFuse',
    type: 'Case Study',
    description: 'How manufacturing companies are using FlowFuse to modernize their operations.',
  },
]
---

<BaseLayout
  title="Publications"
  description="Whitepapers, eBooks, and case studies from FlowFuse."
>
  <div class="w-full py-16 px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-3xl md:text-4xl font-medium text-gray-800 mb-4">Publications</h1>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Explore our whitepapers, eBooks, and case studies to learn more about
          industrial automation and FlowFuse.
        </p>
      </div>

      <!-- Publications List -->
      <div class="space-y-6 mb-16">
        {publications.map((pub) => (
          <div class="p-6 bg-white border border-gray-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition-all">
            <div class="flex items-start justify-between">
              <div>
                <span class="inline-block px-3 py-1 bg-indigo-50 text-indigo-600 text-sm rounded-full mb-3">
                  {pub.type}
                </span>
                <h3 class="text-lg font-medium text-gray-800 mb-2">{pub.title}</h3>
                <p class="text-gray-600">{pub.description}</p>
              </div>
              <span class="i-heroicons-document-arrow-down text-2xl text-indigo-600 flex-shrink-0 ml-4" />
            </div>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-lg p-8">
        <h2 class="text-2xl font-medium text-gray-800 mb-4">Want More Resources?</h2>
        <p class="text-gray-600 mb-6">
          Check out our blog for the latest articles, tutorials, and insights.
        </p>
        <a
          href="/blog/"
          class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Visit Our Blog
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
