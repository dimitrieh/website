import SolutionLayout from '../../layouts/SolutionLayout.astro'

const features = [
  {
    title: 'Hardware & Sensor <span class="text-indigo-600">Integration</span>',
    description: 'FlowFuse simplifies connecting diverse hardware and sensors in manufacturing, enhancing data collection and analytics for informed decision-making and efficiency improvements.',
  },
  {
    title: '<span class="text-indigo-600">Integrate</span> OT and IT Data',
    description: 'Our platform unifies operational and information technology data, offering manufacturers a comprehensive view of production processes for improved efficiency.',
  },
  {
    title: '<span class="text-indigo-600">Intuitive</span> OT Data visualization',
    description: 'FlowFuse offers a visual interface for real-time monitoring and analysis of operational data, aiding in quick, data-driven decisions to optimize manufacturing operations.',
  },
  {
    title: '<span class="text-indigo-600">Automate</span> Event Triggers',
    description: 'With FlowFuse, automate event triggers to respond instantly to production line changes, reducing downtime and boosting efficiency.',
  },
]

const faqs = [
  {
    question: 'Can FlowFuse connect our PLCs to our ERP system?',
    answer: "Yes, FlowFuse supports virtually all industrial protocols through Node-RED's extensive ecosystem. Connect your Siemens, Allen-Bradley, Omron, or other PLCs directly to SAP, Oracle, or any ERP system.",
  },
  {
    question: 'We have mixed equipment brands on our shop floor. Can FlowFuse handle this?',
    answer: 'Absolutely. FlowFuse acts as a universal translator between different equipment brands and protocols, allowing seamless data exchange between Siemens, Rockwell, Schneider, and other vendors.',
  },
  {
    question: 'How do we ensure production data security when connecting shop floor to business systems?',
    answer: 'FlowFuse provides secure tunneling for device connections, encrypted data transmission using TLS/SSL, role-based access control (RBAC), and comprehensive audit logging to meet manufacturing compliance requirements.',
  },
]
---

<SolutionLayout
  title="FlowFuse for IT/OT Integration"
  subtitle="FlowFuse allows teams to automate their manufacturing process through customized, reliable applications."
  description="<p>FlowFuse streamlines manufacturing automation, from production monitoring to supply chain management. Our intuitive, customizable platform enables simple creation of custom solutions for unique manufacturing needs.</p>"
  heroImg="/images/pictograms/factory_blue.png"
  features={features}
  faqs={faqs}
>
  <div class="w-full bg-gray-50 py-16 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-medium mb-6">
        Enhancing Manufacturing with FlowFuse's DevOps Integration
      </h2>
      <p class="text-gray-600">
        FlowFuse elevates manufacturing by ensuring reliable and continuous delivery of applications.
        Our platform incorporates widely recognized DevOps concepts, fostering a collaborative and
        secure development environment.
      </p>
    </div>
  </div>
</SolutionLayout>
